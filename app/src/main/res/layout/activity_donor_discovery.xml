<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DonorDiscoveryActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="rS"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#CCCCCC"/>

        <ImageView
            android:id="@+id/iconNotification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_popup_reminder"
            app:tint="#333333"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request books"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/topBar"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etSearchBox"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/input_border_red"
        android:hint="Search specific needs..."
        android:paddingHorizontal="16dp"
        android:textSize="14sp"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="12dp"
        android:drawableTint="#757575"
        android:layout_below="@id/tvHeaderTitle"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:inputType="text"
        android:imeOptions="actionSearch"/>

    <LinearLayout
        android:id="@+id/tabsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/etSearchBox"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/btnTabPersonal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Personal requirement"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button_red"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/btnTabClassroom"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Classroom requirement"
            android:gravity="center"
            android:textColor="#FF6B6B"
            android:background="@drawable/input_border_red"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabsContainer"
        android:layout_above="@id/bottomNav">

        <LinearLayout
            android:id="@+id/layoutCardsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"/>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_today"
            app:tint="#333333"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"/>

        <ImageView
            android:id="@+id/navSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_search"
            app:tint="#333333"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"/>

        <ImageView
            android:id="@+id/navList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="#333333"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"/>

        <ImageView
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_myplaces"
            app:tint="#333333"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            android:padding="12dp"/>
    </LinearLayout>

</RelativeLayout>