<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DonorDiscoveryActivity">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="rS"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FF6B6B"/>
        <ImageView
            android:id="@+id/iconNotification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_popup_reminder"
            app:tint="#333333"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discovery"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/topBar"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etSearchBox"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/input_border_red"
        android:hint="Search student or book..."
        android:paddingHorizontal="16dp"
        android:textSize="14sp"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="12dp"
        android:layout_below="@id/tvHeaderTitle"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:inputType="text"/>

    <LinearLayout
        android:id="@+id/tabsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/etSearchBox"
        android:paddingHorizontal="16dp"
        android:layout_marginBottom="16dp">
        <TextView
            android:id="@+id/btnTabPersonal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Personal"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button_red"
            android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/btnTabClassroom"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="Classroom"
            android:gravity="center"
            android:textColor="#FF6B6B"
            android:background="@drawable/input_border_red"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="gone">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@android:drawable/btn_star_big_on"
            app:tint="#CCCCCC" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No needs found at the moment!"
            android:textColor="#999999"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStudentList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabsContainer"
        android:layout_above="@id/bottomNav"
        android:padding="8dp"
        android:clipToPadding="false"/>

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="16dp"
        android:gravity="center_vertical">
        <ImageView android:id="@+id/navHome" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:src="@android:drawable/ic_menu_today" app:tint="#333333" android:padding="12dp" android:background="?attr/selectableItemBackground"/>
        <ImageView android:id="@+id/navSearch" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:src="@android:drawable/ic_menu_search" app:tint="#333333" android:padding="12dp" android:background="?attr/selectableItemBackground"/>
        <ImageView android:id="@+id/navList" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:src="@android:drawable/ic_menu_sort_by_size" app:tint="#333333" android:padding="12dp" android:background="?attr/selectableItemBackground"/>
        <ImageView android:id="@+id/navProfile" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:src="@android:drawable/ic_menu_myplaces" app:tint="#333333" android:padding="12dp" android:background="?attr/selectableItemBackground"/>
    </LinearLayout>

</RelativeLayout>