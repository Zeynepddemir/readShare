<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".TeacherDashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FF6B6B"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Teacher Dashboard"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvTotalStudents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Students: Loading..."
                android:textColor="#FFEBEE"
                android:textSize="12sp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/tvLogout"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_lock_power_off"
            app:tint="#FFFFFF"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <Button
                android:id="@+id/btnRegisterNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+ Register New Student"
                android:backgroundTint="#FFFFFF"
                android:textColor="#FF6B6B"
                android:layout_margin="16dp"
                android:elevation="2dp"
                android:stateListAnimator="@null"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:text="Shipment Status"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"/>
                    <TextView
                        android:id="@+id/tvDeliveryStatus"
                        android:text="Checking deliveries..."
                        android:textSize="14sp"
                        android:textColor="#555555"
                        android:textStyle="bold"
                        android:drawablePadding="8dp"
                        android:gravity="center_vertical"
                        app:drawableStartCompat="@android:drawable/ic_menu_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Class List"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:id="@+id/layoutEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:visibility="gone">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="#CCCCCC" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No students found"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvStudents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_student"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>