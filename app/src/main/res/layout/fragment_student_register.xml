<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:padding="16dp"
    tools:context=".StudentRegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_menu_revert"
            app:tint="#000000"
            android:rotation="180"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Student/Class Registration"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvSectionCore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Core Registration Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/etStudentName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_border_red"
            android:hint="Name"
            android:paddingStart="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvSectionCore"/>

        <EditText
            android:id="@+id/etAgeGrade"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_border_red"
            android:hint="Age/Grade"
            android:paddingStart="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etStudentName"/>

        <Spinner
            android:id="@+id/spinnerCity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_border_red"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/etAgeGrade"/>

        <EditText
            android:id="@+id/etSchoolName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/input_border_red"
            android:hint="School Name"
            android:paddingStart="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/spinnerCity"/>

        <TextView
            android:id="@+id/tvSectionNeeds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reading Needs and Interests"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/etSchoolName"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupInterests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:singleSelection="false"
            app:layout_constraintTop_toBottomOf="@id/tvSectionNeeds">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAnimals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Animal Stories"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true"
                android:clickable="true"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/chip_text_selector"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSpace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Space and Astronomy"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true"
                android:clickable="true"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/chip_text_selector"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFantasy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fantastic Adventures"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true"
                android:clickable="true"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/chip_text_selector"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipNature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plants and Nature"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true"
                android:clickable="true"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/chip_text_selector"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Historical Events"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true"
                android:clickable="true"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/chip_text_selector"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipExperiments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experiments and Science"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:checkable="true"
                android:clickable="true"
                app:chipBackgroundColor="@color/chip_background_selector"
                android:textColor="@color/chip_text_selector"/>
        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/tvSectionLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Reading Level"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/chipGroupInterests"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/rgReadingLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tvSectionLevel">

            <RadioButton
                android:id="@+id/rbLevelBeginner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Beginner"
                android:button="@null"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/radio_flat_selector"
                android:textColor="@color/radio_text_selector"/>

            <RadioButton
                android:id="@+id/rbLevelMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Medium"
                android:button="@null"
                android:gravity="center"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/radio_flat_selector"
                android:textColor="@color/radio_text_selector"/>

            <RadioButton
                android:id="@+id/rbLevelHigh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="High"
                android:button="@null"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/radio_flat_selector"
                android:textColor="@color/radio_text_selector"/>
        </RadioGroup>

        <Button
            android:id="@+id/btnSubmitStudent"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:backgroundTint="#FF6B6B"
            android:textColor="#FFFFFF"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/rgReadingLevel"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="40dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
