<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="#FF6B6B"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#EEEEEE"
            app:cardElevation="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_menu_gallery"
                android:scaleType="center"
                app:tint="#BDBDBD"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/tvBookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book's name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: Istanbul"
                android:textSize="11sp"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: 10-12"
                android:textSize="11sp"
                android:textColor="#555555"/>

            <TextView
                android:id="@+id/tvTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topic: Science"
                android:textSize="11sp"
                android:textColor="#555555"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/btnStudentProfile"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:text="Student Profile"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button_red"
                android:layout_marginBottom="8dp"/>
            <TextView
                android:id="@+id/btnDonate"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:text="Donate a book"
                android:gravity="center"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button_red"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>